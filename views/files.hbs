<div class="breadcrumbs">
    {{#each breadcrumbs}}
        {{#if href}}
            <a href="{{href}}">{{text}}</a> /
        {{else}}
            {{text}}
        {{/if}}
    {{/each}}
</div>

<div class="content">
    <ul class="files-list"> <!--Добавлен класс для удобной проверки того, что нужная страница с файлами загрузилась-->
        {{#each files}}
            <li>
                <a href="{{href}}">{{name}}</a>
            </li>
        {{/each}}
    </ul>
</div>